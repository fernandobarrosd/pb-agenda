<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.fragments.PixInfoFragment"
    android:background="@color/brown"
    android:orientation="vertical"
    android:gravity="center">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/qrcode_image_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/qrcode_image"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/white"
        app:contentPadding="15dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/pix_code_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chave pix: 54402008000103"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/black"/>

    </androidx.cardview.widget.CardView>



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_copy_pix_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/blue"
        android:textColor="@color/white"
        android:text="Copiar" />
</androidx.appcompat.widget.LinearLayoutCompat>